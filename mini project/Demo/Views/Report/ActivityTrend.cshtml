@model Demo.Models.ActivityTrendPageVM

@{
    ViewData["Title"] = "Activity Trend";
}

<div class="container-fluid p-4 bg-gray-50" style="min-height: 100vh;">

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <form method="get" asp-action="ActivityTrend">
                <div class="row g-3 align-items-end">
                    <div class="col-md-5">
                        <label class="form-label text-secondary small fw-bold">Start Date</label>
                        <input type="date" name="startDate" class="form-control"
                               value="@(Model.StartDate?.ToString("yyyy-MM-dd"))">
                    </div>
                    <div class="col-md-5">
                        <label class="form-label text-secondary small fw-bold">End Date</label>
                        <input type="date" name="endDate" class="form-control"
                               value="@(Model.EndDate?.ToString("yyyy-MM-dd"))">
                    </div>
                    <div class="col-md-2 d-flex gap-2">
                        <button type="submit" class="btn btn-primary w-100 fw-500">Apply</button>
                        <a asp-action="ActivityTrend" class="btn btn-light w-100 text-secondary fw-500">Clear</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row mb-4 g-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-secondary small fw-500">Total Bookings</span>
                        <i class="bi bi-graph-up-arrow text-primary fs-5"></i>
                    </div>
                    <h3 class="text-primary fw-bold mb-1">@Model.TotalBookings</h3>
                    <small class="text-muted">
                        @Model.StartDate?.ToString("dd MMM") - @Model.EndDate?.ToString("dd MMM")
                    </small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-secondary small fw-500">Total Revenue</span>
                        <i class="bi bi-currency-dollar text-success fs-5"></i>
                    </div>
                    <h3 class="text-success fw-bold mb-1">@Model.TotalRevenue.ToString("C0")</h3>
                    <small class="text-muted">Total earnings</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-secondary small fw-500">Average per Day</span>
                        <i class="bi bi-bar-chart text-purple fs-5" style="color: #6f42c1;"></i>
                    </div>
                    <h3 class="fw-bold mb-1" style="color: #6f42c1;">@Model.AvgBookingsPerDay</h3>
                    <small class="text-muted">Bookings on average</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-secondary small fw-500">Peak Day</span>
                        <i class="bi bi-lightning-charge text-warning fs-5"></i>
                    </div>
                    <h3 class="text-warning fw-bold mb-1">@Model.PeakDayCount</h3>
                    <small class="text-muted">On @Model.PeakDayDate</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <h5 class="card-title mb-4 fw-bold text-secondary">Booking Trend</h5>
            <div style="height: 350px;">
                <canvas id="bookingChart"></canvas>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <h5 class="card-title mb-4 fw-bold text-secondary">Revenue Trend</h5>
            <div style="height: 350px;">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // --- 通用配置 ---
    const commonOptions = {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: { display: true, position: 'top' },
            tooltip: {
                backgroundColor: '#fff',
                titleColor: '#000',
                bodyColor: '#333',
                borderColor: '#e5e7eb',
                borderWidth: 1,
                padding: 10,
                displayColors: true
            }
        },
        scales: {
            x: { grid: { display: false } },
            y: {
                beginAtZero: true,
                grid: { borderDash: [5, 5], color: '#f3f4f6' }
            }
        }
    };

    // 1. Booking Chart (Blue)
    const ctxBooking = document.getElementById('bookingChart').getContext('2d');
    new Chart(ctxBooking, {
        type: 'line',
        data: {
            labels: @Json.Serialize(Model.ChartLabels),
            datasets: [{
                label: 'Bookings',
                data: @Json.Serialize(Model.BookingData),
                borderColor: '#3B82F6', // Blue like React code
                backgroundColor: 'rgba(59, 130, 246, 0.1)',
                pointBackgroundColor: '#3B82F6',
                pointBorderColor: '#fff',
                pointHoverRadius: 6,
                pointRadius: 4,
                tension: 0.4, // Smooth curve
                fill: true,
                borderWidth: 3
            }]
        },
        options: {
            ...commonOptions,
            scales: {
                ...commonOptions.scales,
                y: {
                    ...commonOptions.scales.y,
                    ticks: { stepSize: 1, precision: 0 } // 整数显示
                }
            }
        }
    });

    // 2. Revenue Chart (Green)
    const ctxRevenue = document.getElementById('revenueChart').getContext('2d');
    new Chart(ctxRevenue, {
        type: 'line', // 或者 'bar' 如果你喜欢柱状图
        data: {
            labels: @Json.Serialize(Model.ChartLabels),
            datasets: [{
                label: 'Revenue (RM)',
                data: @Json.Serialize(Model.RevenueData),
                borderColor: '#10B981', // Green like React code
                backgroundColor: 'rgba(16, 185, 129, 0.1)',
                pointBackgroundColor: '#10B981',
                pointBorderColor: '#fff',
                pointHoverRadius: 6,
                pointRadius: 4,
                tension: 0.4,
                fill: true,
                borderWidth: 3
            }]
        },
        options: commonOptions
    });
</script>

<style>
    .bg-gray-50 {
        background-color: #f9fafb;
    }

    .fw-500 {
        font-weight: 500;
    }
    /* 让卡片悬停时有轻微上浮效果 */
    .card:hover {
        transform: translateY(-2px);
        transition: transform 0.2s;
    }
</style>