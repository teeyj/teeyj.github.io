@model Demo.Models.HistoryVM
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            font-size: 14px;
            color: #333;
        }

        .receipt-container {
            width: 80mm; /* A standard thermal receipt width */
            margin: 0 auto;
            padding: 10px;
        }

        .header {
            text-align: center;
            border-bottom: 2px solid #333;
            padding-bottom: 10px;
            margin-bottom: 10px;
        }

            .header h1 {
                font-size: 20px;
                margin: 0;
                text-transform: uppercase;
            }

        .info {
            margin-bottom: 10px;
        }

            .info p {
                margin: 5px 0;
            }

        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 10px;
        }

            .items-table th, .items-table td {
                padding: 5px 0;
                text-align: left;
                border-bottom: 1px dashed #ccc;
            }

            .items-table .right-align {
                text-align: right;
            }

        .totals {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

            .totals td {
                padding: 5px 0;
                font-weight: bold;
            }

        .footer {
            text-align: center;
            margin-top: 20px;
            border-top: 2px solid #333;
            padding-top: 10px;
        }
    </style>
</head>
<body>
    @{
        decimal Total = 0;
    }
    <div class="receipt-container">
        <div class="header">
            <h1>E-Receipt</h1>
            <p><strong>Receipt No:</strong> @Model.ReservationId</p>
            <p><strong>Date:</strong> @Model.Date.ToString("yyyy-MM-dd")</p>
        </div>

        <div class="info">
            <p><strong>Court:</strong> @Model.CourseType</p>
            <p><strong>Total Courts:</strong> @Model.CourseCount</p>
        </div>

        <table class="items-table">
            <thead>
                <tr>
                    <th>Time Slot</th>
                    <th class="right-align">Subtotal (RM)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var time in Model.Time)
                {
                    Total += @Model.Price;
                    <tr>
                        <td>@time</td>
                        <td class="right-align">@Model.Price.ToString("0.00")</td>
                    </tr>
                }
            </tbody>
        </table>

        <table class="totals">
            <tbody>
                <tr>
                    <td>Total (before discount):</td>
                    <td class="right-align">@Total.ToString("0.00")</td>
                </tr>

                @if (Model.DiscountValue != null)
                {
                    <tr>
                        <td>Voucher Discount:</td>
                        <td class="right-align">
                            -@if (Model.DiscountType == "percentage")
                            {
                                @((Total * Model.DiscountValue)?.ToString("0.00") ?? "")
                            }
                                                else
                            {
                                @(Model.DiscountValue?.ToString("0.00") ?? "")
                            }
                        </td>
                    </tr>
                }
                <tr>
                    <td class="total-row">Grand Total:</td>
                    <td class="right-align">@Model.Total.ToString("0.00")</td>
                </tr>
            </tbody>
        </table>

        <div class="footer">
            <p>Thank you for your business!</p>
        </div>
    </div>
</body>
</html>