@model List<Course>
@{
    ViewData["Title"] = "Welcome to Training Cube International";
}

<div id="heroCarousel" class="carousel slide mb-5" data-bs-ride="carousel" data-aos="fade-down">

    <div class="carousel-indicators">
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="4" aria-label="Slide 5"></button>
    </div>

    <div class="carousel-inner rounded">
        <div class="carousel-item active" data-bs-interval="5000">
            <img src="~/images/o.png" class="d-block w-100" alt="First slide image">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4 fw-bold"></h1>
                <p class="lead"></p>
                <a asp-controller="Product" asp-action="Index" class="btn btn-light btn-lg">View All Course</a>
            </div>
        </div>
        <div class="carousel-item" data-bs-interval="5000">
            <img src="~/images/classroom 1.jpg" class="d-block w-100" alt="Second slide image">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4 fw-bold"></h1>
                <p class="lead"></p>
                <a asp-controller="Product" asp-action="Index" class="btn btn-light btn-lg">View All Course</a>
            </div>
        </div>
        <div class="carousel-item" data-bs-interval="5000">
            <img src="~/images/s.png" class="d-block w-100" alt="Second slide image">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4 fw-bold"></h1>
                <p class="lead"></p>
                <a asp-controller="Product" asp-action="Index" class="btn btn-light btn-lg">View All Course</a>
            </div>
        </div>
        <div class="carousel-item" data-bs-interval="5000">
            <img src="~/images/training-3.png" class="d-block w-100" alt="Second slide image">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4 fw-bold"></h1>
                <p class="lead"></p>
                <a asp-controller="Product" asp-action="Index" class="btn btn-light btn-lg">View All Course</a>
            </div>
        </div>
        <div class="carousel-item" data-bs-interval="5000">
            <img src="~/images/t.png" class="d-block w-100" alt="Second slide image">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4 fw-bold"></h1>
                <p class="lead"></p>
                <a asp-controller="Product" asp-action="Index" class="btn btn-light btn-lg">View All Course</a>
            </div>
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="container">
    <h2 class="text-center mb-4" data-aos="fade-up">Our Course</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

        @{
            var delay = 0;
        }

        @foreach (var court in Model)
        {
            <div class="col" data-aos="fade-up" data-aos-delay="@delay">
                <div class="card h-100 shadow-sm">
                    <img src="/products/@court.PhotoURL" class="card-img-top" alt="@court.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@court.Name</h5>
                        <p class="card-text">
                            Price starts from <strong class="text-success">@court.Price.ToString("C") / class</strong>.
                        </p>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@court.CourseId" class="btn btn-primary w-100">Book Now</a>
                    </div>
                </div>
            </div>

            delay += 100; // delay time for slide
        }

    </div>
</div>

<hr class="my-5">

<div class="container">
    <div class="row align-items-center bg-primary text-white p-4 rounded" data-aos="fade-up">
        <div class="col-md-8">
            <h3 class="fw-bold">Become a Training Cube International Member!</h3>
            <p>Join our community to enjoy exclusive rates, priority booking, and access to member-only events. Sign up today and unlock a better sporting experience.</p>
            <a asp-controller="Account" asp-action="Register" class="btn btn-light fw-bold">Register Now</a>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .carousel-item {
            height: 60vh;
            min-height: 400px;
            background-color: #777; /* Background color before the image is loaded */
        }

            .carousel-item img {
                height: 100%;
                object-fit: cover; /* Crop the image to fit the container */
            }

        /* To make the text clear on any image, add a shadow to the text */
        .carousel-caption h1, .carousel-caption p {
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        }
    </style>
}