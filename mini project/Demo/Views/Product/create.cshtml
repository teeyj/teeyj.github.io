@model Demo.Models.CourseVM

@{
    ViewBag.Title = "Create";
}



<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Id">Course Id</label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name">Course Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price">Price(RM)</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Course Status</label>

        <div class="form-check form-switch">
            <input asp-for="IsActive"
                   class="form-check-input"
                   type="checkbox"
                   id="isActiveSwitch" />

            <label class="form-check-label" for="isActiveSwitch">
                Active / Deactive
            </label>
        </div>

        <small class="text-muted">
            Turn OFF to hide this course from users.
        </small>
    </div>

    <div class="form-group">
        <label asp-for="Photo">Upload Photo</label>
        <input asp-for="Photo" type="file" class="form-control" accept="image/*" onchange="previewSingle(event)" />
        <span asp-validation-for="Photo" class="text-danger"></span>
        <div class="mt-2">
            <img id="singlePreview" style="max-width:200px; display:none;" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Photos">Upload Photos (multiple)</label>
        <input asp-for="Photos" type="file" multiple class="form-control" accept="image/*" onchange="previewMultiple(event)" />
        <span asp-validation-for="Photos" class="text-danger"></span>
        <div id="multiPreview" class="mt-2 d-flex flex-wrap gap-2"></div>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <script>
        // show one image
        function previewSingle(event) {
            const file = event.target.files[0];
            const preview = document.getElementById('singlePreview');
            if (file) {
                preview.src = URL.createObjectURL(file);
                preview.style.display = 'block';
            } else {
                preview.style.display = 'none';
            }
        }

        // show multiple image
        function previewMultiple(event) {
            const files = event.target.files;
            const container = document.getElementById('multiPreview');
            container.innerHTML = ""; // reset the image
            Array.from(files).forEach(file => {
                const img = document.createElement('img');
                img.src = URL.createObjectURL(file);
                img.style.maxWidth = "120px";
                img.style.margin = "5px";
                img.classList.add("img-thumbnail");
                container.appendChild(img);
            });
        }
    </script>
}